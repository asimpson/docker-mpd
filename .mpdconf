music_directory        "/music"
playlist_directory     "~/.mpd/playlists"
db_file                "~/.mpd/database"
log_file               "~/.mpd/log"
pid_file               "~/.mpd/pid"
state_file             "~/.mpd/state"

bind_to_address        "0.0.0.0"
port                   "6601"

audio_output {
  type           "httpd"
  name           "lossless"
  encoder        "flac"
  port           "8000"
  max_clients    "8"
  mixer_type     "software"
  format         "44100:16:2"
}